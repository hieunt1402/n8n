###############################################
# n8n Self-Host Environment Configuration
# Example .env file for single-server setup
# Fill in required values before starting n8n.
###############################################

# =====================
# Basic Configuration
# =====================
N8N_USER_FOLDER=/root
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_EDITOR_BASE_URL=https://hieeus1402-n8n.hf.space
WEBHOOK_URL=https://hieeus1402-n8n.hf.space
N8N_RUNNERS_ENABLED=true
# =====================
# Security Settings
# =====================
# Encryption key for credentials (MANDATORY)
# N8N_ENCRYPTION_KEY=<your_encryption_key>

# Enable Basic Auth for UI (recommended if public)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=<your_username>
# N8N_BASIC_AUTH_PASSWORD=<your_password>

# =====================
# Database Configuration
# =====================
DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=<your_db_host>
# DB_POSTGRESDB_DATABASE=<your_db_name>
# DB_POSTGRESDB_USER=<your_db_user>
# DB_POSTGRESDB_PASSWORD=<your_db_password>
DB_POSTGRESDB_PORT=6543
DB_POSTGRESDB_SCHEMA=public

# =====================
# Logging & Metrics
# =====================
N8N_LOG_LEVEL=info
N8N_METRICS=true

# =====================
# Timezone
# =====================
GENERIC_TIMEZONE=Asia/Ho_Chi_Minh
TZ=Asia/Ho_Chi_Minh
